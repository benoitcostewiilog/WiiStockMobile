{
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es6",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "@app/*": ["app/*"],
            "@assets/*": [ "assets/*" ],
            "@env": [ "environments/environment" ],
            "@pages/*": [ "pages/*" ],
            "@services/*": [ "services/*" ],
            "@providers/*": [ "providers/*" ],
            "@theme/*": [ "theme/*" ],
            "@helpers/*": [ "helpers/*" ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/__tests__/*.ts"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
