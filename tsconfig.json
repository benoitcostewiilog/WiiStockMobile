{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "@app/*": ["app/*"],
            "@entities/*": ["entities/*"],
            "@pages/*": ["pages/*"],
            "@environments/*": ["environments/*"]
        },
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
